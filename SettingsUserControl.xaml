<UserControl x:Class="PictureWidget.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureWidget"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label Content="Type" Margin="10,2"/>
            <ComboBox x:Name="comboBoxType" Width="120" Height="23" Grid.Column="1" Margin="10,2"/>
            <TextBox x:Name="textBoxFile" Height="23" Width="120" Grid.Row="1" Grid.Column="1" Margin="10,2" IsManipulationEnabled="True" MaxLines="1"/>
            <Button x:Name="buttonFile" Content="File..." Grid.Row="1" Grid.Column="2" Click="buttonFile_Click" Margin="10,2"/>
            <TextBox x:Name="textBoxColor" Height="23" Width="120" RenderTransformOrigin="3.452,9.515" Grid.Row="2" Grid.Column="1" Margin="10,2" MaxLines="1" IsManipulationEnabled="True"/>
            <Button x:Name="buttonApply" Content="Apply" RenderTransformOrigin="4.576,8.273" Grid.Column="2" Grid.Row="2" Click="buttonApply_Click" Margin="10,2"/>
            <Label Content="File path" Margin="10,2" Grid.Row="1"/>
            <Label Content="Color" Margin="10,2" Grid.Row="2"/>
        </Grid>

    </Grid>
</UserControl>
