<UserControl x:Class="PictureWidget.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureWidget"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="240" d:DesignWidth="225" Margin="10, 25">
  <StackPanel>
    <Grid Margin="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"></ColumnDefinition>
        <ColumnDefinition></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Label Content="Type" HorizontalAlignment="Stretch" FontSize="10"/>
      <ComboBox x:Name="comboBoxType" Height="23" Grid.Column="1" HorizontalAlignment="Stretch"/>
    </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="File Path" FontSize="10" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="textBoxFile" IsManipulationEnabled="True" MaxLines="1" Grid.Column="1" HorizontalAlignment="Stretch"/>
            <Button x:Name="buttonFile" Content="File..." Click="buttonFile_Click" Grid.Column="2" HorizontalAlignment="Stretch" FontSize="10" Background="{DynamicResource PrimaryBrush}"/>
        </Grid>

        <CheckBox x:Name="globalThemeCheck" Height="20" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6, 2" Content="Use Global Theme" FontSize="10"></CheckBox>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Background Color" FontSize="10" HorizontalAlignment="Stretch"/>
            <Button x:Name="bgColorSelect" Grid.Column="1" Click="colorSelect_OnClick" HorizontalAlignment="Stretch"></Button>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Overlay Text" FontSize="10" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="textOverlay" MaxLines="1" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Overlay Font" FontSize="10" HorizontalAlignment="Stretch"/>
            <Button x:Name="overlayFontSelect" Grid.Column="1" Click="overlayFontSelect_Click" HorizontalAlignment="Stretch"></Button>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Overlay Color" FontSize="10" HorizontalAlignment="Stretch"/>
            <Button x:Name="overlayColorSelect" Grid.Column="1" Click="colorSelect_OnClick" HorizontalAlignment="Stretch"></Button>
        </Grid>

        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Overlay Offset" FontSize="10" HorizontalAlignment="Stretch" Grid.ColumnSpan="4"></Label>
            <Label Grid.Row="1" Content="X:" FontSize="10" HorizontalAlignment="Stretch"></Label>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="OverlayXOffset" PreviewTextInput="OverlayXOffset_PreviewTextInput" ContextMenu="{x:Null}" CommandManager.PreviewExecuted="OverlayOffset_PreviewExecuted"></TextBox>
            <Label Grid.Row="1" Content="Y:" FontSize="10" Grid.Column="2" HorizontalAlignment="Stretch"></Label>
            <TextBox Grid.Row="1" Grid.Column="3" x:Name="OverlayYOffset" PreviewTextInput="OverlayYOffset_PreviewTextInput" ContextMenu="{x:Null}" CommandManager.PreviewExecuted="OverlayOffset_PreviewExecuted" ></TextBox>
        </Grid>

        <Button x:Name="buttonApply" Content="Save" Click="buttonApply_Click" Margin="2" HorizontalAlignment="Stretch" Width="220" Background="{DynamicResource PrimaryBrush}"/>
    </StackPanel>
</UserControl>
